        <Label Content="Quantity" HorizontalAlignment="Left" Margin="280,140,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="discount" HorizontalAlignment="Left" Margin="342,172,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Discount" HorizontalAlignment="Left" Margin="279,166,0,0" VerticalAlignment="Top"/>
        <Button x:Name="AddBtn" Content="Ekle" HorizontalAlignment="Left" Margin="362,343,0,0" VerticalAlignment="Top" Height="63" Width="80" Click="AddBtn_Click"/>
        <ListView x:Name="ListView1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="264,211,0,170" HorizontalAlignment="Left" Width="283">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label x:Name="IdLabel" Content="ID" HorizontalAlignment="Left" Margin="145,10,0,0" VerticalAlignment="Top" IsEnabled="False"/>
        <TextBox x:Name="id" HorizontalAlignment="Left" Margin="96,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
    </Grid>
</Window>
