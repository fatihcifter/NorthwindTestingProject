<Window x:Class="wpfUI.OrderAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfUI"
        mc:Ignorable="d"
        Title="OrderAddWindow" Height="500" Width="636">
    <Grid Margin="0,0,0,34" HorizontalAlignment="Left" Width="608">
        <TextBox x:Name="customerId" HorizontalAlignment="Left" Margin="96,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="CustomerId" HorizontalAlignment="Left" Margin="25,55,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="employeeId" HorizontalAlignment="Left" Margin="96,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="EmployeeId" HorizontalAlignment="Left" Margin="25,81,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="orderDate" HorizontalAlignment="Left" Margin="96,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="OrderDate" HorizontalAlignment="Left" Margin="28,105,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="requiredDate" HorizontalAlignment="Left" Margin="96,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="___Ad_yok_" Content="RequiredDate" HorizontalAlignment="Left" Margin="12,131,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="shippedDate" HorizontalAlignment="Left" Margin="96,162,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="ShippedDate" HorizontalAlignment="Left" Margin="15,158,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="shipVia" HorizontalAlignment="Left" Margin="96,188,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
