        <TextBox x:Name="shipName" HorizontalAlignment="Left" Margin="96,237,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="ShipName" HorizontalAlignment="Left" Margin="25,233,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="street" HorizontalAlignment="Left" Margin="96,297,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Street" HorizontalAlignment="Left" Margin="53,297,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.104,0.839"/>
        <TextBox x:Name="city" HorizontalAlignment="Left" Margin="96,323,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="City" HorizontalAlignment="Left" Margin="60,319,0,0" VerticalAlignment="Top"/>
        <Label Content="Address" HorizontalAlignment="Left" Margin="101,262,0,0" VerticalAlignment="Top" Height="35" Width="71" FontSize="16"/>
        <TextBox x:Name="region" HorizontalAlignment="Left" Margin="96,347,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Region" HorizontalAlignment="Left" Margin="43,343,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="postalCode" HorizontalAlignment="Left" Margin="96,373,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="___Ad_yok_1" Content="PostalCode" HorizontalAlignment="Left" Margin="21,367,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="country" HorizontalAlignment="Left" Margin="96,397,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Country" HorizontalAlignment="Left" Margin="38,393,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="productId" HorizontalAlignment="Left" Margin="342,96,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="ProductId" HorizontalAlignment="Left" Margin="275,94,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.104,0.839"/>
        <TextBox x:Name="unitPrice" HorizontalAlignment="Left" Margin="342,122,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="UnitPrice" HorizontalAlignment="Left" Margin="279,120,0,0" VerticalAlignment="Top"/>
        <Label Content="Details" HorizontalAlignment="Left" Margin="347,61,0,0" VerticalAlignment="Top" Height="35" Width="71" FontSize="16"/>
